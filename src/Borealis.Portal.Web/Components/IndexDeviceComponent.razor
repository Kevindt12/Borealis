@using Borealis.Domain.Devices
@using Borealis.Portal.Domain.Devices


<MudPaper Outlined="true" Class="pa-2" >

    @* Device Title Text*@
    <MudStack Class="py2" Justify="Justify.Center" AlignItems="AlignItems.Center" >
        <MudText Class="pa-2" Typo="Typo.h4" >@Device.Name</MudText>
    </MudStack>
    
    @* The ledstrips. *@
    <MudStack>
        @foreach (Ledstrip ledstrip in Ledstrips)
        {
            <IndexDeviceLedstripComponent Ledstrip="@ledstrip" Device="@Device"/>
        }
    </MudStack>
</MudPaper>





@code {

    /// <summary>
    /// The device.
    /// </summary>
    [Parameter]
    public Device Device { get; set; } = default!;

    /// <summary>
    /// The ledstrips/
    /// </summary>
    public List<Ledstrip> Ledstrips { get; set; } = new List<Ledstrip>();


    /// <inheritdoc />
    protected override void OnParametersSet()
    {

        Ledstrips = Device.Configuration!.Ledstrips;

        base.OnParametersSet();
    }


}